@model SharedVm.ProductVm
@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("~/js/productDetail.js")"></script>
}

<div class="container">
    <div class="row">
        <h2>@Model.Name</h2>
    </div>
    <hr />
    <br />
    <div class="row">
        <div class="col-sm">
            <div id="carouselExampleControls" class="carousel slide h-100" data-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.ImageLocation[0]" style="width:100px" alt="First slide">
                    </div>
                    @for (int i = 1; i < Model.ImageLocation.Count(); i++)
                    {
                        <div class="carousel-item ">
                            <img class="d-block w-100" src="@Model.ImageLocation[i]" style="width:100px" alt="First slide" />
                        </div>

                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <div class="col-sm">
            <ul class="list-group">
                <li class="list-group-item disabled"><h4>@Model.Description</h4></li>
                <li class="list-group-item">@Model.BrandId</li>
                <li class="list-group-item">@Model.Price</li>
                <div>
                    <form action="" method="post">
                        <ul>
                            <li class="list-group-item">
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-light" onclick="Minus()" style="font-size:large">
                                            -
                                        </button>
                                    </span>
                                    <input type="number" id="quantity" name="quantity" style="width:50px" value="1" min="1" max="100">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-light" onclick="Plus()" style="font-size:large">
                                            +
                                        </button>
                                    </span>
                                </div><br />

                                @{if (User.Identity.IsAuthenticated)
                                    {
                                        var userId = User.Claims.ElementAt(2).Value;
                                    <li class="list-group-item">

                                        <button typeof="submit" class="btn btn-success" asp-controller="Cart" asp-action="AddCartItem" asp-route-userId="@userId" asp-route-productId="@Model.Id">Thêm Vào Giỏ Hàng</button>
                                    </li>
                                }
                                else
                                {

                                    <button type="submit" asp-route-id="@Model.Id" class="btn btn-success" asp-controller="Cart" asp-action="AddsSession">Thêm Vào Giỏ Hàng</button>
                                }}
                                </li>
                            </ul>
                        </form>
                    </div>

